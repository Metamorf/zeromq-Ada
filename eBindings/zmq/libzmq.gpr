project libZMQ is
   ROOT := "/usr/local/";

   for languages use ("C","C++");
   for source_files use ("zmq.h","zmq.hpp");
   for source_dirs use (ROOT & "include");
   for Library_name use "zmq";
   for externally_Built use "True";
   for Library_dir use ROOT & "lib";
   for Library_Kind use "dynamic";

end libZMQ;

